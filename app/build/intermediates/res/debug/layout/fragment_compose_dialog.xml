<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etComposeTweet"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/title_activity_compose"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/char_count_string"
        android:id="@+id/tvCharCount"
        android:layout_below="@+id/etComposeTweet"
        android:layout_alignRight="@+id/etComposeTweet"
        android:layout_alignEnd="@+id/etComposeTweet" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnComposeTweet"
        android:layout_below="@+id/tvCharCount"
        android:background="@drawable/send_button_active"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout><!-- From: file:/Users/ithukral/Workspace/IntroAndroidCourse/class3/SimpleTwitterClient/app/src/main/res/layout/fragment_compose_dialog.xml -->